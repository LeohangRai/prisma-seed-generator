enum Gender {
    MALE
    FEMALE
    OTHERS
}

model User {
    id     Int     @id @default(autoincrement())
    uuid   String  @map("_id")
    name   String
    email  String
    gender Gender?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    posts Post[]

    @@index([uuid])
    @@index([name])
    @@map("users")
}
